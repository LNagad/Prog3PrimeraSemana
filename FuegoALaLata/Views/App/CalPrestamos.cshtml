@model Application.ViewModel.CalcPrestamosViewModel;

<section class="col-12 d-flex container-fluid justify-content-center">
    <div class="w-50 d-flex flex-column align-items-center">
        <h1 class="text-white text-center w-100">Calculadora de prestamos</h1>
        <h5 class="text-uppercase text-center" style="color: #BDBDBD; text-transform: capitalize;">
            Completa los campos
            requeridos para visualizar las cuotas a pagar
        </h5>
        <div class="mt-3 w-100 d-flex justify-content-center">
            <form method="post" asp-controller="App" asp-action="CalPrestamos" class="d-flex flex-column align-items-center " style="width: 95%;">
                <div class="mb-3 w-100 d-flex justify-content-between align-items-center">
                    <label for="montoP" class="form-label text-white" style="margin-left: 42px;">Monto del
                        prestamo</label>
                    <input asp-for="montoPrestamo" id="montoP" type="number" class="form-control text-black calP-font"
                        placeholder="Digite el monto deseado" style="width: 55%;" required min="1" step="1" onkeypress="return event.charCode >= 48 && event.charCode <= 57">
                </div>
                <div class="mb-3 w-100 d-flex justify-content-between align-items-center">
                    <label for="tipoP" class="form-label text-white" style="margin-left: 42px">Tipo de prestamo</label>
                    <select asp-for="tipoPrestamo" required class="form-select text-black calP-font" id="tipoP" style="width: 55%;">
                        <option value="">Seleccione el tipo de prestamo</option>
                        <option value="1">Personal</option>
                        <option value="2">Automóvil</option>
                        <option value="3">Hipotecario</option>
                    </select>
                </div>
                <div class="mb-3 w-100 d-flex justify-content-between align-items-center">
                    <label for="cuotasM" class="form-label text-white" style="margin-left: 42px">Cantidad de cuotas
                        mensuales</label>
                    <select asp-for="cuotasMensuales" class="form-select text-black calP-font" id="cuotasM" style="width: 55%;" required>
                        <option value="">Seleccione la cantidad deseada</option>
                        <option value="12">12</option>
                        <option value="18">18</option>
                        <option value="24">24</option>
                        <option value="30">30</option>
                        <option value="36">36</option>
                        <option value="42">42</option>
                        <option value="48">48</option>
                        <option value="54">54</option>
                        <option value="60">60</option>
                        <option value="66">66</option>
                        <option value="72">72</option>
                        <option value="78">78</option>
                        <option value="84">84</option>
                        <option value="90">90</option>
                        <option value="96">96</option>
                        <option value="102">102</option>
                        <option value="108">108</option>
                        <option value="114">114</option>
                        <option value="120">120</option>
                    </select>
                </div>
                <div class="mb-3 w-100 d-flex justify-content-between align-items-center">
                    <i class="fa-solid fa-circle-info" style="color: #1B6EC2; margin-bottom: 4px; font-size: 20px;"></i>
                    <label for="tasaInteresA" class="form-label text-white" style="margin-right: 42px">Tasa de interes
                        anual (%)</label>
                    <div class="d-flex justify-content-center " style="width: 55%;">
                        <input asp-for="interes" type="number" class="w-100 form-control text-black disabled calP-font" disabled
                            id="tasaInteresA" required>
                    </div>
                </div>
                <div class="w-100 d-flex justify-content-lg-end">
                    <button type="submit" class="btn btn-primary">Calcular</button>
                </div>
            </form>
        </div>
    </div>
</section>

@section scripts{
<script>

    document.querySelector("#tipoP").addEventListener("change", (event) => {
        let valor = event.target.value;
        switch (valor) {
            case '1':
                document.querySelector('#tasaInteresA').value = 22;
                break;
            case '2':
                document.querySelector('#tasaInteresA').value = 12;
                break;
            case '3':
                document.querySelector('#tasaInteresA').value = 8;
                break;
        }
        //if (event.target.value == 1) {
        //} 
    });
</script>
}
