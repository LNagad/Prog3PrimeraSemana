@model Application.ViewModel.ZodiacoViewModel
@{
    
}

<section class="zodiaco-main d-flex justify-content-center">
    <section class="d-flex flex-column align-items-center" style="width: 30%;">
        <div class="w-100">
            <h1 class="text-white" style="text-align: center;">Zodiaco</h1>
            <form method="post" asp-controller="App" asp-action="Zodiaco">
                <div class="mb-3">
                    <label asp-for="dDate" class="text-white"  class="form-label">Dia de nacimiento</label>
                    <input asp-for="dDate" type="number" class="form-control"  placeholder="Digite su dia de nacimiento">
                </div>
                <div class="mb-3">
                    <label asp-for="mDate" class="text-white"  class="form-label">Mes de nacimiento</label>
                    <select class="form-select form-select-lg" asp-for="mDate">
                        <option selected>Abre este menu</option>
                        <option value="1">Enero</option>
                        <option value="2">Febrero</option>
                        <option value="3">Marzo</option>
                        <option value="4">Abril</option>
                        <option value="5">Mayo</option>
                        <option value="6">Junio</option>
                        <option value="7">Julio</option>
                        <option value="8">Agosto</option>
                        <option value="9">Septiembre</option>
                        <option value="10">Octubre</option>
                        <option value="11">Noviembre</option>
                        <option value="12">Diciembre</option>
                    </select>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Generar zodiaco</button>
                </div>
            </form>
            <div class="d-flex justify-content-evenly">
                @try
                {
                    <h4 class="text-white">Signo zodiacal:</h4>
                    <h4 class="text-white pb-1" style="border-bottom: 5px solid #FFFFFF;">@ViewBag.zodiacoData</h4>
                }
                catch (Exception ex)
                {
                    <h3>@ex.Message</h3>
                }
            </div>
        </div>

    </section>
</section>